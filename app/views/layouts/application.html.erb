<!DOCTYPE html>
<html>
  <head>
    <title>ForeverGreen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('Forevergreen.Tech.logo.png') %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark shadow-5-strong">
    <!-- Container wrapper -->
    <div class="container-fluid">
     <!-- Navbar brand -->
      <a class="navbar-brand" href="#">
        <img src="https://www.forevergreen.tech/wp-content/uploads/2022/08/Forevergreen.Tech-transparent1-126x126.png" alt="..." height="80">
      </a>

     <!-- Toggle button -->
     <button
        class="navbar-toggler"
        type="button"
        data-mdb-toggle="collapse"
        data-mdb-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
    >
      <i class="fas fa-bars"></i>
    </button>
    <!-- Collapsible wrapper -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <!-- Left links -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        
      </ul>
      <!-- Left links -->
    </div>
    <!-- Collapsible wrapper -->
      <form class="form-inline">
        <a class="button glow-button" href='/'role="button">
        Home
        </a>
      <div style="padding-left: 10px;">
        <a class="button glow-button" href='/products' role="button">
        Products
        </a>
      </div>
      <div style="padding-left: 10px;">
        <a class="button glow-button" href='/about_us' role="button">
        About Us
        </a>
      </div>
      <div style="padding-left: 10px;">
        <a class="button glow-button" href='/projects' role="button">
        Projects
        </a>
      </div>
      </form>
    </form>
  </nav>
  </nav>
    <%= yield %>
  </body>
</html>
